<h3>Total Fee per dentist</h3>

<%= form_for(:search, url: "/search_appointment_by_dentist") do |form| %>

  <div class="col-sm-12">
    <div class="form-group">
      <%= form.label :dentists %>
      <%= form.select :dentists_id, Dentist.all.collect {|p| [p.name, p.id]}, {include_blank: true}, class: "form-control" %>
    </div>
  </div>


  <div class="col-sm-6">
    <%= form.label :date_begin %>
    <div class="form-group">
      <%= form.date_field :date1, :id => "datepicker1", :class => "form-control" %>
    </div>
  </div>

  <div class="col-sm-6">
    <%= form.label :date_end %>
    <div class="form-group">
      <%= form.date_field :date2, :id => "datepicker2", :class => "form-control" %>
    </div>
  </div>

  <div class="col-sm-12">
    <button type="submit" class="btn btn-primary">Search</button>
  </div>

<% end %>

<% if @appointments %>
  <table class="table">
    <thead>

    <th>Dentist</th>
    <th>Date</th>
    <th>Quantity appointment</th>
    <th>Total Fee</th>
    </thead>
    <tbody>

    <% @appointments.each do |appointment| %>

      <tr>
        <td>
          <%= Dentist.find(appointment.dentists_id).name %>
        </td>
        <td>
          <%= appointment.date %>
        </td>
        <td>
          <%= appointment.qtt %>
        </td>
        <td>
          <%= appointment.fee %>
        </td>
      </tr>
    <% end %>

    </tbody>
  </table>
<% end %>