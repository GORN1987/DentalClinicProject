<p id="notice"><%= notice %></p>

<h3>Dentists</h3>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Dental number</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dentists.each do |dentist| %>
      <tr>
        <td><%= dentist.name %></td>
        <td><%= dentist.email %></td>
        <td><%= dentist.phone_number %></td>
        <td><%= dentist.dental_number %></td>
        <td><%= dentist.is_active %></td>
        <td><%= link_to 'Show', dentist, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_dentist_path(dentist), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', dentist, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dentist', new_dentist_path, class: "btn btn-primary" %>
